{% extends 'base.html.twig' %}

{% block title %}Error {{ code }}{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 60px 20px;">
        <img src="https://cdn-icons-png.flaticon.com/512/564/564619.png" alt="Error" style="width: 120px; margin-bottom: 30px; opacity: 0.8;" />

        <h1 style="font-size: 3em; margin-bottom: 10px;">Error {{ code }}</h1>

        <p style="font-size: 1.2em; color: #666;">
            {% if code == 401 %}
                You need to log in to access this page.
            {% elseif code == 403 %}
                You do not have permission to access this page.
            {% elseif code == 500 %}
                A server error occurred. Please try again later.
            {% else %}
                An unexpected error occurred.
            {% endif %}
        </p>

        <a href="/" style="display: inline-block; margin-top: 30px; padding: 12px 24px; background-color:rgb(25, 30, 33); color: white; text-decoration: none; border-radius: 6px;">
            Back to Home
        </a>
    </div>
{% endblock %}
